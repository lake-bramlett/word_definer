<h1>Update <%= @word.name %></h1>

<form action="/words/<%= @word.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Edit Word Name</label>
  <input id="name" name="name" type="text" value="<%= @word.name %>">

  <button type="submit">Update</button>
</form>

<p><a href="/">Return to word list</a></p>

<form action="/words/<%= @word.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete word</button>
</form>
